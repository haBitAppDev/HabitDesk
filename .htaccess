Options +FollowSymLinks

# -------------------------------------------------------------
# Redirect HTTP → HTTPS
# -------------------------------------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# -------------------------------------------------------------
# HTTP Strict Transport Security (HSTS) für sichere Verbindungen
# -------------------------------------------------------------
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# -------------------------------------------------------------
# SPA Routing (React, Vue, Angular, etc.)
# -------------------------------------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Wenn Datei oder Ordner existiert → direkt ausliefern
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Alles andere auf index.html umleiten (SPA Fallback)
  RewriteRule ^ index.html [L]
</IfModule>

# -------------------------------------------------------------
# 404 Fallback ebenfalls auf index.html
# -------------------------------------------------------------
ErrorDocument 404 /index.html
